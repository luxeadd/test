<% 
const baseMeta = { 
	title:'NEWS', 
	desc:'ディスクリプション',
	path:'../',
	page:'news',
	}; 
%> 

<!DOCTYPE html>
<html lang="ja">
  <%- include(baseMeta.path + 'common/_head', { baseMeta:baseMeta } ) %>
	<body>
	<!-- ヘッダー -->
  <%- include(baseMeta.path + 'common/_header', { baseMeta:baseMeta } ) %>

   <!-- MV -->
	 <div class="p-mv js-mv">
		<div class="p-mv__img">
			<img src="/images/top/mv1.jpg" alt="mv">
		</div>
		<div class="p-mv__block">
			<h2 class="p-mv__title">メインタイトルが入ります</h2>
			<p class="p-mv__title-sub">サブタイトルが入ります</p>
		</div>
	 </div>

	 <!-- news -->
	 <div class="p-news l-news--sub">
		<div class="l-inner l-inner--sub">
			<div class="p-news__contents">
				<div class="p-news__body">
					<div class="p-lists">
						<% for (var i=0; i < 10; i++) { %>
						<article class="p-lists__item">
						<%- include(baseMeta.path + 'parts/_c-list', { 
							datetime:'2020-07-20', 
							time:'2020.07.20',
							cat:'お知らせ',
							link:'#',
							title:'記事タイトルが入ります。記事タイトルが入ります。記事タイトルが入ります。'
						} )%>
						</article>
						<% }  %>
				 </div>
				</div>
			</div>
		</div>
	</div>
  
	 


  <!-- お問い合わせ -->
	<section class="p-contact l-contact">
		<div class="l-inner">
			<div class="p-contact__title">
				<%- include(baseMeta.path + 'parts/_c-title1', { mod:'c-title1--left', title:'お問い合わせ' , subtitle:'Contact'} )%>
			</div>
			<div class="p-contact__body">
				<p class="p-contact__text">テキストが入ります。テキストが入ります。テキストが入ります。テキストが入ります。</p><!-- /.p-contact__text -->
			</div>
			<div class="p-contact__btn">
				<%- include(baseMeta.path + 'parts/_c-btn-slide', { link:'#', text:'詳しく見る'} )%>
			</div>
		</div>
	</section>
 
	<!-- ページトップボタン -->
	  <%- include(baseMeta.path +'parts/_c-page-top') %>
  <!-- フッター -->
		<%- include(baseMeta.path +'common/_footer') %>
  </body>
</html>
